{
  "name": "website-creator",
  "version": "1.0.0",
  "description": "Website Creator for AST POS Clients",
  "main": "server.js",
  "dependencies": {
    "express": "^4.16.4",
    "if-env": "^1.0.4",
    "pg": "^7.10.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.8.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.0"
  },
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adomoshe/website-creator.git"
  },
  "author": "AST POS",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/adomoshe/website-creator/issues"
  },
  "homepage": "https://github.com/adomoshe/website-creator#readme"
}
